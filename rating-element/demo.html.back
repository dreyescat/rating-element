<!doctype html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>rating-element</title>

    <script src="../bower_components/webcomponentsjs/webcomponents-lite.min.js"></script>
    <!-- Enable shadow DOM -->
    <!--
    <script>
      window.Polymer = window.Polymer || {};
      window.Polymer.dom = 'shadow';
    </script>
    -->
    <!--
    <link rel="stylesheet" href="../bower_components/fontawesome/css/font-awesome.css">
    -->
    <link rel="import" href="../bower_components/iron-icons/iron-icons.html">
    <link rel="import" href="../bower_components/iron-iconset-svg/demo/svg-sample-icons.html">
    <link rel="import" href="../bower_components/iron-iconset/iron-iconset.html">
    <link rel="import" href="rating-element.html">
    <!--
    <link rel="import" href="font-sample-icons.html">
    <link rel="import" href="default-icons.html">
    -->
    <style>
      input[type=number] {
        width: 40px;
      }
      rating-element {
        display: block;
        margin: 5px 0;
      }
    </style>
    <style is="custom-style">
      rating-element::shadow iron-icon {
        outline: 1px solid red !important;
      }
    </style>
  </head>
  <body>
    <iron-iconset name="img-sample-icons"
      src="../bower_components/iron-iconset/demo/my-icons.png"
      width="96" size="24"
      icons="location place starta stopb bus car train walk">
    </iron-iconset>

    <h3>Use iron icons</h3>
    <code>
      &lt;rating-element empty="star-border" filled="star"&gt;&lt;/rating-element&gt;
    </code>
    <rating-element empty="star-border" filled="star"></rating-element>
    <input type="number"/>

    <h3>Use svg iron iconset</h3>
    <code>
      &lt;rating-element empty="svg-sample-icons:twitter" filled="svg-sample-icons:codepen"&gt;&lt;/rating-element&gt;
    </code>
    <rating-element empty="svg-sample-icons:twitter" filled="svg-sample-icons:codepen"></rating-element>
    <input type="number"/>

    <h3>Use image iron iconset</h3>
    <code>
      &lt;rating-element empty="img-sample-icons:stara" filled="img-sample-icons:stopb"&gt;&lt;/rating-element&gt;
    </code>
    <rating-element empty="img-sample-icons:starta" filled="img-sample-icons:stopb"></rating-element>
    <input type="number"/>
    <!--
    <h3>Use font iron icons (shaddy DOM)</h3>
    <rating-element empty="font-sample-icons:star" filled="font-sample-icons:heart"></rating-element>
    <input type="number"/>
    -->
    <!--
    <h3>Use CSS iron icons (shaddy DOM)</h3>
    <rating-element empty="default-icons:empty" filled="default-icons:full"></rating-element>
    <input type="number"/>
    -->
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        var ratingElements = document.getElementsByTagName('rating-element');
        for (var i = 0; i < ratingElements.length; i++) {
          ratingElements[i].addEventListener('change', function (e) {
            var ratingElement = e.target;
            ratingElement.nextElementSibling.value = ratingElement.value;
          });
          ratingElements[i].nextElementSibling.addEventListener('change', function (e) {
            var inputElement = e.target;
            inputElement.previousElementSibling.value = inputElement.value;
          });
        }
      });
    </script>
  </body>
</html>
